{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": false,
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "module": "ESNext",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "target": "es2016",
    "types": ["node"]
  }
}
